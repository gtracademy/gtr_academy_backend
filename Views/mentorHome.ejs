<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Mentors - GTR Academy</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-r from-blue-50 to-indigo-100 min-h-screen font-sans">
  <%- include('Header'); -%>

  <div class="container mx-auto px-6 py-12">
    <!-- Title -->
    <h2 class="text-3xl font-bold mb-10 text-gray-800 text-center">
      👨‍🏫 Meet Our <span class="text-indigo-600">Mentors</span>
    </h2>

    <% if (mentors && mentors.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
        <% mentors.forEach(m => { %>
          <!-- Card -->
          <div
            class="bg-white/80 backdrop-blur-md rounded-2xl shadow-lg p-6 flex flex-col items-center text-center hover:shadow-2xl hover:-translate-y-2 transition-all duration-300">
            
            <!-- Profile Image -->
            <div class="relative">
              <img src="<%= m.photo %>" alt="no photo"
                class="w-28 h-28 rounded-full object-cover border-4 border-indigo-200 shadow-md">
            </div>

            <!-- Name & Designation -->
            <h3 class="text-xl font-semibold text-gray-800 mt-4"><%= m.name %></h3>
            <p class="text-sm text-indigo-600 font-medium mb-3"><%= m.designation %></p>

            <!-- Bio -->
            <p class="text-gray-600 text-sm mb-6 leading-relaxed">
              <%= m.bio.length > 80 ? m.bio.substring(0, 80) + '...' : m.bio %>
            </p>

            <!-- Buttons -->
            <div class="flex gap-3">
              <a href="/mentor/edit/<%= m._id %>"
                class="bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm shadow hover:bg-indigo-700 transition">
                ✏️ Edit
              </a>
              <form action="/mentor/delete/<%= m._id %>" method="POST"
                onsubmit="return confirm('Are you sure you want to delete this mentor?');">
                <button
                  class="bg-red-600 text-white px-4 py-2 rounded-lg text-sm shadow hover:bg-red-700 transition">
                  🗑️ Delete
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <p class="text-red-500 text-center text-lg mt-10">🚫 No mentors available.</p>
    <% } %>
  </div>
</body>
</html>
