
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Mentors - GTR Academy</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-r from-blue-50 to-indigo-100 min-h-screen font-sans">
  <%- include('Header'); -%>



<h1 class="text-3xl font-bold mb-6 text-center ">Admin Panel</h1>
<% testimonials.forEach(t => { %>
  <div class="bg-white p-4 shadow rounded mb-4">
    <p><strong><%= t.name %></strong> - <%= t.course %></p>
    <p>Status: <%= t.status %></p>
    <p><%= t.message %></p>

    <% if (t.imageUrl) { %>
      <img src="<%= t.imageUrl %>" class="w-32 mt-2 rounded">
    <% } %>

    <% if (t.videoUrl) { %>
      <video controls class="w-64 mt-2"><source src="<%= t.videoUrl %>"></video>
    <% } %>

    <div class="mt-3 flex gap-2">
      <% if (t.status !== 'approved') { %>
        <form action="/testimonial/admin/approve/<%= t._id %>" method="POST">
          <button class="bg-green-500 text-white px-3 py-1 rounded">Approve</button>
        </form>
      <% } %>

      <form action="/testimonial/admin/reject/<%= t._id %>" method="POST">
        <button class="bg-yellow-500 text-white px-3 py-1 rounded">Reject</button>
      </form>

      <form action="/testimonial/admin/edit/<%= t._id %>" method="GET">
        <button class="bg-blue-500 text-white px-3 py-1 rounded">Edit</button>
      </form>

      <form action="/testimonial/admin/delete/<%= t._id %>" method="POST" onsubmit="return confirm('Delete?')">
        <button class="bg-red-500 text-white px-3 py-1 rounded">Delete</button>
      </form>
    </div>
  </div>
<% }) %>

</body>
</html>
